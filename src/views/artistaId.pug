        title= titleArt
        include partials/_head.pug
        
    body
        include partials/_header.pug
        .bannerArtistas(style=`background: ${url};background-attachment: fixed; background-repeat: no-repeat; background-size: cover;`)
        section
            include partials/_title.pug
            .contenedor-perfil
                .perfil-contenedor
                    img(src=`${urlPerfil}`, alt="Foto de Perfil")
                .curriculum
                    p=parrafoUno 
                    p=parrafoDos
                    p=parrafoTres
                    p=parrafoCuatro
                    p=parrafoCinco
            .contenedor-galeria
                each artista in general
                    .contenedor-galeria-foto
                        img(src=`${artista.obra}`, alt="")
                        p=artista.titulo
                        p=artista.tamano
                        p=artista.tecnica
                        p=artista.ano
